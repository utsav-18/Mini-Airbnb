<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2"> <br><br>

    <h3 class="mb-4 text-center"><%= listing.title %></h3>

    <div class="card shadow-sm p-4 listing-card">


      
      <% if (listing.image) { %>
        <img 
          src="<%= listing.image %>" 
          alt="<%= listing.title %>" 
          class="img-fluid rounded mt-3"
          style="max-height: 350px; object-fit: cover;"
        />
      <% } %>

      <p class="card-text mt-2"><strong>Description:</strong> <%= listing.description %></p>
      <p class="card-text"><strong>Price:</strong> ₹<%= listing.price.toLocaleString("en-IN") %></p>
      <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>
      <p class="card-text"><strong>Country:</strong> <%= listing.country %></p>


      <div class="mt-4 d-flex gap-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit Listing</a>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
          <button class="btn btn-danger">Delete Listing</button>
        </form>

        <a href="/listings" class="btn btn-secondary">Back to Listings</a>
      </div>

    </div>

          <div class="col-10 col-md-8 offset-md-2 mb-2">

            <!-- Review Form -->
            <div class="p-4 border rounded shadow-sm bg-light mb-4">
              <h4 class="mb-2">Leave a Review</h4>

              <form action="/listings/<%= listing.id %>/reviews" method="POST" class="needs-validation" novalidate>
                
                <!-- Rating -->
                <div class="mb-2">
                  <label for="rating" class="form-label fw-semibold">Rating</label>
                  <input 
                    type="range" 
                    min="1" 
                    max="5" 
                    id="rating" 
                    name="review[rating]" 
                    class="form-range"
                  >
                  <div class="d-flex justify-content-between px-1 small text-muted">
                    <span>1 ⭐</span>
                    <span>5 ⭐</span>
                  </div>
                </div>

                <!-- Comment -->
                <div class="mb-3">
                  <label for="comment" class="form-label fw-semibold">Comments</label>
                  <textarea 
                    name="review[comment]" 
                    id="comment" 
                    rows="4" 
                    class="form-control"
                    placeholder="Share your experience..."
                    required
                  ></textarea>
                  <div class="invalid-feedback">Please add some comments for review.</div>
                </div>

                <button class="btn btn-dark mt-2">Submit Review</button>
              </form>
            </div>

            <!-- All Reviews -->
            <div class="text-center my-4">
              <h5 class="fw-bold mb-2">All Reviews</h5>
            </div>
            <hr>

            <div class="row g-3">
              <% for (review of listing.reviews) { %>
                <div class="col-md-6">
                  <div class="card shadow-sm border-0 h-100 ">
                    <div class="card-body">
                      <h6 class="card-title fw-bold mb-1 m-3">
                        John Doe
                      </h6>

                      <p class="card-text text-muted mb-2 m-3" style="font-size: 0.9rem;">
                        <%= review.comment %>
                      </p>

                      <span class="badge  text-dark m-3">
                        ⭐ <%= review.rating %>
                      </span>
                    </div>
                      <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="m-3" method="POST">
                        <button class="btn btn-sm  btn-dark">Delete</button>
                      </form>
                  </div>
                </div>
              <% } %>
            </div>

          </div>

  </div>
</div>
